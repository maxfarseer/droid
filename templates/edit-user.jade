extends layouts/main

block content
	.row
		.col-xs-6
			h2 #{title}

	form.form-horizontal(role="form")

		.form-group
			label.col-xs-2(for="username") Имя
			.col-xs-3
				input#username.form-control(type="text")

		.form-group
			label.col-xs-2(for="phone-number") Номер телефона
			.col-xs-3
				input#phone-number.form-control(type="text")

		.col-xs-3
			button.btn.btn-default(type="submit") Сохранить